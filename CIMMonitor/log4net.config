<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <log4net>
    <!-- 系统错误日志 - 按天生成 -->
    <appender name="SystemErrorFile" type="log4net.Appender.RollingFileAppender">
      <file value="logs\Error" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="-yyyy-MM-dd'.log'" />
      <staticLogFileName value="false" />
      <maxSizeRollBackups value="30" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
    </appender>

    <!-- 系统操作日志 - 按天生成 -->
    <appender name="SystemOperationFile" type="log4net.Appender.RollingFileAppender">
      <file value="logs\Operation" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="-yyyy-MM-dd'.log'" />
      <staticLogFileName value="false" />
      <maxSizeRollBackups value="30" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
    </appender>

    <!-- 设备交互日志 - 按天生成 -->
    <appender name="DeviceCommunicationFile" type="log4net.Appender.RollingFileAppender">
      <file value="logs\Device" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="-yyyy-MM-dd'.log'" />
      <staticLogFileName value="false" />
      <maxSizeRollBackups value="30" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
    </appender>

    <!-- 控制台输出 -->
    <appender name="Console" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
    </appender>

    <!-- 根日志记录器 -->
    <root>
      <level value="INFO" />
      <appender-ref ref="Console" />
    </root>

    <!-- 系统错误日志记录器 -->
    <logger name="SystemError" additivity="false">
      <level value="INFO" />
      <appender-ref ref="SystemErrorFile" />
      <appender-ref ref="Console" />
    </logger>

    <!-- 系统操作日志记录器 -->
    <logger name="SystemOperation" additivity="false">
      <level value="INFO" />
      <appender-ref ref="SystemOperationFile" />
      <appender-ref ref="Console" />
    </logger>

    <!-- 设备交互日志记录器 -->
    <logger name="DeviceCommunication" additivity="false">
      <level value="INFO" />
      <appender-ref ref="DeviceCommunicationFile" />
      <appender-ref ref="Console" />
    </logger>

    <!-- 保留CIMInterface Logger兼容性 -->
    <logger name="CIMInterface" additivity="false">
      <level value="INFO" />
      <appender-ref ref="SystemOperationFile" />
      <appender-ref ref="Console" />
    </logger>
  </log4net>
</configuration>
