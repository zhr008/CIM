{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "WCFServices": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "NLog": {
      "targets": {
        "file": {
          "type": "File",
          "fileName": "logs/WCFService_${shortdate}.log",
          "layout": "${longdate} ${uppercase:${level}} ${logger} ${message} ${exception:format=tostring}"
        },
        "console": {
          "type": "Console",
          "layout": "${time} [${level:uppercase=true}] ${message} ${exception:format=tostring}"
        }
      },
      "rules": [
        {
          "logger": "*",
          "minLevel": "Debug",
          "writeTo": "file,console"
        }
      ]
    }
  },
  "TibcoSettings": {
    "Service": "7500",
    "Network": ";",
    "Daemon": "tcp:7500",
    "Username": "${env:TIBCO_USERNAME}",
    "Password": "${env:TIBCO_PASSWORD}",
    "Timeout": 5000,
    "Subjects": [
      "EQUIPMENT.STATUS.>",
      "LOT.TRACKING.>",
      "PROCESS.DATA.>",
      "ALARM.NOTIFY.>"
    ]
  },
  "OracleSettings": {
    "ConnectionString": "User Id=${env:DB_USER};Password=${env:DB_PASSWORD};Data Source=${env:DB_HOST}:${env:DB_PORT}/${env:DB_SERVICE};Connection Timeout=30;",
    "CommandTimeout": 30,
    "EnableLogging": true,
    "MaxPoolSize": 100,
    "MinPoolSize": 5,
    "ConnectionTimeout": 30
  },
  "WcfSettings": {
    "BaseAddress": "http://localhost:8080/MESService",
    "EnableMetadata": true
  }
}
